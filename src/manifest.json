{
  "manifest_version": 2,
  "name": "wikimobilizer",
  "version": "0.0.1",
  "description": "Always use the mobile version of Wikipedia",
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "wikimobilizer"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.wikipedia.org/"
  ],
  "background": {
    "scripts": ["wikimobilizer.js"],
    "persistent": true
  },
  "icons":
  {
    "128": "icons/128.png"
  }
}

